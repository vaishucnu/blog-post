<% if @todo.errors.any? %>
        <div id="errors">
            <h2><%= pluralize(@todo.errors.count, "error") %> stopped this post from saving</h2>
            <ul>
                <% @todo.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>

    <% end %>
<%= simple_form_for @todo do |f| %>
	<%= f.input :title, label: "Todo-Name" %>
	<%= f.input :description %>
	<%= f.button :submit %>
<% end %>