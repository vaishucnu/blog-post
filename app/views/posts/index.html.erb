<% @posts.each do |post| %>
    <div class="post_wrapper">
        <h2 class="title"><%= link_to post.title, post %></h2>
        <p class="body"><%= truncate(post.body, length:80) %></p> <!-- light visible text on index page -->
        <p class="date"><%= time_ago_in_words(post.created_at) %> ago </p>
    </div>
<% end %>